            <input input type="text" list="authorsList" class=" form-control" id="Author" size="25" placeholder="Author" style="margin-bottom:10px">
            <datalist id="authorsList"></datalist>
        </div>

        <div class=" md-form col-md-4">
            <h4>Drag & Drop image </h4>
