        }

        .tooltips {
            position: relative;
            display: inline;
        }

        #dropArea {
            background: #b5b5b5;
            border: black dashed 1px;
            height: 50px;
            width: 200px;
            text-align: center;
            color: #fff;
            padding-top: 12px;
        }

        .active-drop {
            background: #77bafa !important;
            border: solid 2px blue !important;
            opacity: .5;
            color: black !important;
        }

        #filter {
            position: relative;
            display: inline-block;
            border-bottom: 1px dotted black;
        }

            #filter .tooltiptext {
                visibility: hidden;
                width: 100px;
                background-color: grey;
                color:black;
                text-align: center;
                padding: 5px 5px;
                border: black solid 1px;
                /* Position the tooltip */
                position: absolute;
                z-index: 1;
                top: -125px;
                left: 80%;
                margin-left: -60px;
            }

                #filter .tooltiptext::after {
                    content: "";
                    position: absolute;
                    top: 100%;
                    left: 50%;
                    margin-left: -5px;
                    border-width: 5px;
                    border-style: solid;
                    border-color: black transparent transparent transparent;
                }

            #filter:hover .tooltiptext {
                visibility: visible;
            }

        .tooltiptext .checkbox:hover {
            background-color: blue;
        }

        .dropdown:hover .tooltiptext {
            display: block;
        }
    </style>
</head>

