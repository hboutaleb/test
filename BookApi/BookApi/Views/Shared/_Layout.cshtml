    <style>
        #tooltip {
            position: relative;
            display: inline-block;
            border-bottom: 1px dotted black;
        }

            #tooltip .tooltiptext {
                visibility: hidden;
                width: 300px;
                background-color:darkgray;
                color: #fff;
                text-align: center;
                border-radius: 6px;
                padding: 5px 0;
                position: absolute;
                z-index: 1;
                top: 90%;
                left: -100%;
                margin-left: -60px;
            }

                #tooltip .tooltiptext::after {
                    content: "";
                    position: absolute;
                    bottom: 100%;
                    left: 65%;
                    margin-left: -5px;
                    border-width: 5px;
                    border-style: solid;
                    border-color: transparent transparent darkgray transparent;
                }

            #tooltip:hover .tooltiptext {
                visibility: visible;
            }
    </style>
</head>
